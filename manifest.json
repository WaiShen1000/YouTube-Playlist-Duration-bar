{
    "name": "Youtube Playlist",
    "version": "0.2.0",
    "description": "Youtube extension",
    "manifest_version": 3,
    "permissions": [
        "tabs"
    ],
    "host_permissions": [
        "https://www.youtube.com/*"
    ],
    "content_scripts": [
        {
            "matches": [
                "https://www.youtube.com/*"
            ],
            "js": [
                "scripts/content.js"
            ]
        }
    ],
    "web_accessible_resources": [
        {
            "matches": [
                "https://www.youtube.com/*"
            ],
            "resources": [
                "scripts/duration_header.js",
                "scripts/playlist_item.js"
            ]
        }
    ],
    "action": {
        "default_popup": "hello.html"
    }
}