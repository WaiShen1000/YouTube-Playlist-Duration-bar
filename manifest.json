{
    "name": "Youtube Playlist Duration",
    "version": "0.3.1",
    "description": "Show playlist duration when playing YouTube video",
    "manifest_version": 3,
    "host_permissions": [
        "https://www.youtube.com/*"
    ],
    "content_scripts": [
        {
            "matches": [
                "https://www.youtube.com/*"
            ],
            "js": [
                "scripts/content.js"
            ],
            "css": [
                "css/duration-playing.css"
            ]
        }
    ],
    "web_accessible_resources": [
        {
            "matches": [
                "https://www.youtube.com/*"
            ],
            "resources": [
                "scripts/duration-playing.js"
            ]
        }
    ],
    "icons": {
        "16": "icons/icon.png",
        "48": "icons/icon.png",
        "128": "icons/icon.png"
    }
}