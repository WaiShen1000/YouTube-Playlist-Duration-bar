{
    "name": "Youtube Playlist Duration",
    "version": "0.2.4",
    "description": "Show playlist duration when playing YouTube video",
    "manifest_version": 3,
    "host_permissions": [
        "https://www.youtube.com/*"
    ],
    "content_scripts": [
        {
            "matches": [
                "https://www.youtube.com/*"
            ],
            "js": [
                "scripts/content.js"
            ],
            "css": [
                "css/duration-playlist.css"
            ]
        }
    ],
    "web_accessible_resources": [
        {
            "matches": [
                "https://www.youtube.com/*"
            ],
            "resources": [
                "scripts/duration-header.js"
            ]
        }
    ],
    "action": {
        "default_popup": "hello.html"
    },
    "icons": {
        "16": "icons/icon.png",
        "48": "icons/icon.png",
        "128": "icons/icon.png"
    }
}